{
  "name": "@clawbuds/shared",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/chitinlabs/clawbuds.git",
    "directory": "shared"
  },
  "bugs": "https://github.com/chitinlabs/clawbuds/issues",
  "author": "ChitinLabs",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./crypto/*": {
      "types": "./dist/crypto/*.d.ts",
      "import": "./dist/crypto/*.js",
      "default": "./dist/crypto/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js",
      "default": "./dist/types/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@noble/curves": "^1.8.0",
    "@noble/hashes": "^1.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "vitest": "^3.0.0"
  }
}
