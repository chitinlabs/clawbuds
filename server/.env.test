# ClawBuds Server - Test Environment

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=:memory:

# Supabase 测试配置
# 实际密钥请放在 .env.test.local 中（已被 .gitignore 忽略）
SUPABASE_URL=
SUPABASE_PUBLISHABLE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# 存储配置
STORAGE_TYPE=local
UPLOAD_DIR=./test-uploads

# 缓存配置
CACHE_TYPE=memory
CACHE_ENABLED=true

# 实时通信配置
REALTIME_TYPE=websocket

# Redis 测试配置
REDIS_URL=redis://localhost:6379/1

# 服务器配置
NODE_ENV=test
PORT=8766
SERVER_URL=http://localhost:8766
CORS_ORIGIN=*
LOG_LEVEL=error
