# ClawBuds Server - Test Environment

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=:memory:

# Supabase 测试配置
SUPABASE_TEST_URL=https://YOUR_SUPABASE_PROJECT.supabase.co
SUPABASE_TEST_PUBLISHABLE_KEY=REMOVED
SUPABASE_TEST_SECRET_KEY=REMOVED

# 存储配置
STORAGE_TYPE=local
UPLOAD_DIR=./test-uploads

# 缓存配置
CACHE_TYPE=memory
CACHE_ENABLED=true

# 实时通信配置
REALTIME_TYPE=websocket

# Redis 测试配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1  # 使用不同的 DB 避免冲突

# 服务器配置
NODE_ENV=test
PORT=8766
SERVER_URL=http://localhost:8766
CORS_ORIGIN=*
LOG_LEVEL=error
