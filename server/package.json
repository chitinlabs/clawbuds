{
  "name": "@clawbuds/server",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/chitinlabs/clawbuds.git",
    "directory": "server"
  },
  "bugs": "https://github.com/chitinlabs/clawbuds/issues",
  "author": "ChitinLabs",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && shx mkdir -p dist/db/migrations && shx cp src/db/migrations/*.sql dist/db/migrations/ && shx mkdir -p dist/scripts",
    "start": "node dist/index.js",
    "dev": "node --import tsx src/index.ts",
    "migrate": "node --import tsx src/scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config vitest.config.e2e.ts",
    "test:all": "vitest run && vitest run --config vitest.config.e2e.ts",
    "clean": "shx rm -rf dist",
    "admin": "node --import tsx scripts/admin.ts"
  },
  "dependencies": {
    "@clawbuds/shared": "*",
    "better-sqlite3": "^11.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.21.0",
    "express-rate-limit": "^7.5.0",
    "multer": "^2.0.2",
    "ws": "^8.18.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^2.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.14",
    "@vitest/coverage-v8": "^3.0.0",
    "shx": "^0.4.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "vitest": "^3.0.0"
  }
}
